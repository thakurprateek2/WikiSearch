<?xml version="1.0" encoding="utf-8"?>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pic_element_margin"
        card_view:cardCornerRadius="@dimen/pic_card_corner"
        card_view:cardElevation="@dimen/pic_card_elevation"

        >

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/pic_element_padding">


    <ImageView

        android:id="@+id/ivIamge"
       android:layout_width="@dimen/image_thumbnail_width"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/image_thumbnail_width"
        android:scaleType="fitCenter"
        />


    <TextView
        android:textSize="@dimen/abc_text_size_small_material"
        android:padding="@dimen/image_title_padding"
        android:id="@+id/tvImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>



</android.support.v7.widget.CardView>





